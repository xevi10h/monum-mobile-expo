{
	"expo": {
		"name": "Monum",
		"slug": "monum-mobile-expo",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/images/icon.png",
		"scheme": "es.monum.mobile",
		"userInterfaceStyle": "automatic",
		"splash": {
			"image": "./assets/images/splash.png",
			"resizeMode": "contain",
			"backgroundColor": "#ffffff"
		},
		"platforms": ["ios", "android", "web"],
		"ios": {
			"supportsTablet": true,
			"usesAppleSignIn": true,
			"bundleIdentifier": "es.monum.mobile",
			"config": {
				"googleMapsApiKey": "AIzaSyB9yYYln_LCAddS-ZViaeGfU_dfVpb_00E"
			},
			"infoPlist": {
				"UIBackgroundModes": ["location", "fetch", "remote-notification"],
				"NSLocationWhenInUseUsageDescription": "This app requires access to your location when open.",
				"NSLocationAlwaysAndWhenInUseUsageDescription": "This app requires access to your location even when closed.",
				"NSLocationAlwaysUsageDescription": "This app requires access to your location when open.",
				"deploymentTarget": "14"
			}
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/images/icon.png",
				"backgroundColor": "#ffffff"
			},
			"package": "es.monum.mobile",
			"config": {
				"googleMaps": {
					"apiKey": "AIzaSyBxlBuz0g2QeKgZN6TZ6tGUVqH59SSDoBw"
				}
			},
			"permissions": [
				"android.permission.ACCESS_FINE_LOCATION",
				"android.permission.ACCESS_COARSE_LOCATION",
				"android.permission.ACCESS_BACKGROUND_LOCATION"
			]
		},
		"web": {
			"bundler": "metro",
			"output": "static",
			"favicon": "./assets/images/icon.png",
			"config": {
				"googleMapsApiKey": "AIzaSyAm0KAb8uG0fBoYsce_owdlbTKKeNh0POo",
				"googleMaps": {
					"apiKey": "AIzaSyAm0KAb8uG0fBoYsce_owdlbTKKeNh0POo"
				}
			}
		},
		"plugins": [
			"expo-router",
			"@react-native-google-signin/google-signin",
			"expo-apple-authentication",
			"react-native-map-link",
			"expo-location",
			"expo-background-fetch",
			[
				"expo-build-properties",
				{
					"android": {
						"compileSdkVersion": 34,
						"targetSdkVersion": 34,
						"buildToolsVersion": "34.0.0"
					},
					"ios": {
						"deploymentTarget": "14.0"
					}
				}
			],
			[
				"expo-task-manager",
				{
					"ios": {
						"minimumOSVersion": "14"
					}
				}
			],
			[
				"expo-background-fetch",
				{
					"ios": {
						"minimumOSVersion": "14"
					}
				}
			],
			[
				"expo-camera",
				{
					"cameraPermission": "$(PRODUCT_NAME) necesita acceder a tu cámara para poder escanear QRs que interactuan con nuestra app, redireccionandote a Monums específicos."
				}
			],
			[
				"expo-location",
				{
					"locationAlwaysAndWhenInUsePermission": "$(PRODUCT_NAME) necesita acceder a tu ubicación para mostrar tu posición actual en el mapa y mejorar las recomendaciones de lugares cercanos.",
					"locationAlwaysPermission": "Allow $(PRODUCT_NAME) to use your location.",
					"locationWhenInUsePermission": "$(PRODUCT_NAME) usará tu ubicación actual para mostrar tu posición en el mapa y mejorar tu experiencia en la app.",
					"isIosBackgroundLocationEnabled": true,
					"isAndroidBackgroundLocationEnabled": true
				}
			],
			[
				"expo-image-picker",
				{
					"photosPermission": "$(PRODUCT_NAME) necesita acceso a tu biblioteca de fotos para permitirte subir imágenes y videos desde tu galería."
				}
			],
			[
				"expo-font",
				{
					"fonts": [
						"./assets/fonts/Montserrat-Regular.ttf",
						"./assets/fonts/Montserrat-SemiBold.ttf"
					]
				}
			],
			[
				"expo-screen-orientation",
				{
					"initialOrientation": "DEFAULT"
				}
			],
			"expo-video"
		],
		"experiments": {
			"typedRoutes": true
		},
		"extra": {
			"router": {
				"origin": false
			},
			"eas": {
				"projectId": "5d01d162-6626-4445-ad7c-48e91626d6c3"
			}
		}
	}
}
